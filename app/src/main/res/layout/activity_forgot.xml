<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPackage.ForgotActivity">


   <android.support.design.widget.TextInputLayout
       android:id="@+id/textInputLayout_login_inputEmail"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true" >
    <EditText
        android:id="@+id/editText_forgot_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ایمیل را وارد کنید" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_forgot_sendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputLayout_login_inputEmail"
        android:layout_centerHorizontal="true"
        android:text="ارسال ایمیل"/>


</RelativeLayout>
