<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_visitLastDate_layoutRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<LinearLayout
    android:id="@+id/linear_visitLastDate_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3.5"
    android:gravity="center">

    <com.example.kamal.saatzanhamrah.CustomTextView
        android:id="@+id/textView_contentLastTimeAdapter_sumDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="vertical">

        <com.example.kamal.saatzanhamrah.CustomTextView
            android:id="@+id/textView_contentLastTimeAdapter_endWorkDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp" />

        <com.example.kamal.saatzanhamrah.CustomTextView
            android:id="@+id/textView_contentLastTimeAdapter_endWorkTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <com.example.kamal.saatzanhamrah.CustomTextView
            android:id="@+id/textView_contentLastTimeAdapter_startWorkDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp" />

        <com.example.kamal.saatzanhamrah.CustomTextView
            android:id="@+id/textView_contentLastTimeAdapter_startWorkTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_margin="16dp"
        android:layout_below="@id/linear_visitLastDate_layout"/>

</RelativeLayout>
